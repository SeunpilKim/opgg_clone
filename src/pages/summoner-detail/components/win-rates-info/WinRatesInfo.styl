.champions-list-wrapper
  width: 300px
  border-radius: 2px;
  border-top: solid 1px #cdd2d2
  border-bottom: solid 1px #cdd2d2
  background-color: #ededed;
  .nav-wrapper
    display: flex
    height: 44px
    width: 100%
    border-left: solid 1px #cdd2d2
    border-right: solid 1px #cdd2d2
    .nav-item
      width: 50%
      display: flex
      align-items: center
      justify-content: center
      font-size: 12px
      color: #879292
      background-color: #f2f2f2
      border: solid 1px #cdd2d2
      border-top: none;
      cursor: pointer
      &.active
        font-weight: bold
        color: #5e5e5e
        background-color: inherit
        border: none
  .list-wrapper
    border-left: solid 1px #cdd2d2
    border-right: solid 1px #cdd2d2
    .champ-item
      display: flex
      padding: 4px 15px
      border-bottom: solid 1px #cdd2d2
      &:last-child
        border-bottom: none
      &.recent
        padding: 4px 8px
        height: 48px
        align-items: center
      .icon-wrapper
        width: 45px
        height: 45px
        border-radius: 50%
        margin-right: 10px
        overflow: hidden
        img
          width: 100%
      .info-wrapper
        width: calc(100% - 45px)
        .first-line
          display: flex
          margin-bottom: 3px
          align-items: center
          span
            font-size: 13px
            font-weight: bold
            color: #5e5e5e
          .name
            min-width: 92px
            max-width: 92px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
          .kda
            &.normal
              color: #2daf7f
            &.good
              color: #1f8ecd
            &.excellent
              color: #e19205
          .win-rate
            margin-left: auto
            &.good
              color:  #c6443e
        .second-line
          display: flex
          span
            font-size: 11px
            font-family: Helvetica
            color: #879292
          .cs
            min-width: 93px
          .game-count
            margin-left: auto
      .recent-icon-wrapper
        width: 32px
        height: 32px
        border-radius: 50%
        margin-right: 10px
        overflow: hidden
        img
          width: 100%
      .recent-info-wrapper
        display: flex
        font-weight: bold
        align-items: center
        .recent-name
          min-width: 71px
          font-size: 13px
          color: #5e5e5e
          max-width: 71px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        .recent-win-rate
          font-size: 13px
          color: #879292
          margin-right: 12px
          width: 30px
        .recent-win-rate-bar
          margin-left: auto
          width: 123px
          height: 24px
          border-radius: 4px
          display: flex
          overflow: hidden
        .win, .lose
          font-size: 12px
          color: white
          padding: 4px
          min-width: 30px
        .win
          background-color: #1f8ecd
        .lose
          text-align: right
          background-color: #ee5a52



            