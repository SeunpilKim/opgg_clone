.match-item-wrapper
  width: 100%
  display: flex
  margin-bottom: 8px
  &:last-child
    margin-bottom: 0
  &.win
    border: 1px solid #a1b8cd
    background-color: #b0ceea
    .game-result
      color: #2c709b
    .item-image-wrapper
      &.empty
        background-color: #7aa5c3
  &.lose
    border: 1px solid #c0aba8
    background-color: #d6b5b2
    .game-result
      color: #d0021b
    .item-image-wrapper
      &.empty
        background-color: #cb9e9a
  &.renew
    border: 1px solid #a7a7a7
    background-color: #b6b6b6
    .game-result
      color: black
    .item-image-wrapper
      &.empty
        background-color: #979797
  .info-wrapper
    display: flex
    align-items: center
    padding: 13px 11px 14px 16px
    .game-info-wrapper
      font-size: 11px
      color: #555555
      text-align: center
      margin-right: 14px
      min-width: 63px
      .game-type, .game-result
        font-weight: bold
        margin-bottom: 4px
      .game-created
        margin-bottom: 9px
    .pick-info-wrapper
      margin-right: 24px
      .champ-spell-rune-wrapper
        display: flex
        align-items: center
        img
          width: 100%
        .champ-image-wrapper
          width: 46px
          height: 46px
          overflow: hidden
          border-radius: 50%
          margin-right: 6px
        .spell-image-wrapper
          width: 22px
          margin-right: 4px
        .rune-image-wrapper
          .image-wrapper
            width: 22px
            height: 22px
            overflow: hidden
            border-radius: 50%
      .champ-name
        margin-top: 9px
        font-size: 11px
        color: #555555
        text-align: center
    .kda-wrapper
      text-align: center
      margin-right: 33px
      .kda
        font-size: 15px
        margin-bottom: 6px
        .kill, .death, .assist
          font-weight: bold
        .kill, .assist
          color: #555e5e
        .death
          color: #d0021b
        .slash
          color: #948e8d
          margin: 0 2px
      .kda-cal
        font-size: 11px
        font-weight: bold
        margin-bottom: 10px
        .value
          color: #333
        .unit
          color: #555e5e
          margin-left: 2px
      .badges
        .badge-item
          background-color: #ec4f48
          border 1px solid #bf3b36
          border-radius: 9px
          font-size: 10px
          color: white
          padding: 3px 5px
    .ingame-info-wrapper
      font-size: 11px
      text-align: center
      margin-right: 30px
      .level, .cs
        color: #555e5e
        margin-bottom: 6px
      .assist-rate
        color: #d0021b
    .item-info-wrapper
      .item-list-wrapper
        display: flex
        width: 96px;
        height: 48px
        flex-wrap: wrap;
        margin-bottom: 5px
        .item-image-wrapper
          width: 22px
          height: 22px
          margin-right: 2px
          img
            width: 100%
          &.below
            margin-top: 2px
      .team-info
        display: flex
        align-items: center
        justify-content: center
        .team-icon-wrapper
          display: flex
          width: 16px
          height: 16px
          margin-right: 4px
          img
            width: 100%
        .control-ward-count
          font-size: 11px
          color: black


          